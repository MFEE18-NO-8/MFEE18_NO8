            </tr>
          </thead>
          <tbody>
            
            <%var sn=1; //宣告sn=編號 %>
            <% for(var i=0; i < memberData.length; i++) { %>
                <tr>
                    <td><%= (memberData[i].MsgDate).toLocaleDateString() %></td>
                    <td>
                        <%= (memberData[i].Msg) %>
                    </td>
                </tr>
                <% sn++; %>
            <% } %>


          </tbody>
      </table>
