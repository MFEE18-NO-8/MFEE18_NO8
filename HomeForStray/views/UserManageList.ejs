<%- include("./Back/User.txt") %>

  <!-- 內頁 -->
  <div class="content-wrapper">
    <section class="content">
      <h3 class="title">會員資料管理</h3>
      <div class="row">

        <!-- 查詢條件 -->
        <div class="col-xs-12">
          <div class="search">
            <!-- 標題 -->
            <div class="col-xs-12 col-sm-6 col-md-3">
              <div class="form-group">
                <label>會員名稱：</label>
                <input type="text" id="ListText" class="form-control" value="" name="MemberName">
              </div>
            </div>

            <!-- 換行 -->
            <div class="clearfix"></div>

            <!-- 申請日期： -->
            <div class="col-xs-12 col-sm-6 col-md-3">
              <label>申請日期：</label>
            </div>
            <div class="clearfix"></div>
            <div class="col-xs-12 col-sm-6 col-md-3">
              <div class="form-group">
                <input name="" type="date" class="form-control inputNotOutline">
              </div>
            </div>

            <!-- 換行 -->
            <div class="clearfix"></div>

            <!-- 申請通過日期： -->
            <div class="col-xs-12 col-sm-6 col-md-3">
              <label>申請通過日期：</label>
            </div>
            <div class="clearfix"></div>
            <div class="col-xs-12 col-sm-6 col-md-3">
              <div class="form-group">
                <input name="" type="date" class="form-control inputNotOutline">
              </div>
            </div>


            <!-- 換行 -->
            <div class="clearfix"></div>

            <!-- 狀態： -->
            <div class="col-xs-12 col-sm-6 col-md-3">
              <div class="form-group">
                <label>狀態：</label>
                <div class="clearfix"></div>
                <input type="radio" name="NewsState" id="NewsState_1">
                <label for="NewsState_1" class="MyListLabel ">使用中</label>
                <input type="radio" name="NewsState" id="NewsState_0">
                <label for="NewsState_0" class="MyListLabel">停權中</label>
              </div>
            </div>


            <!-- 查詢/清除 -->
            <div class="col-xs-12 text-right">
              <button type="button" class="btn btn-primary">查詢</button>
              <button type="button" class="btn btn-primary">清除</button>
            </div>
            <div class="clearfix"></div>

          </div>
        </div>

        <!-- 新增 -->
        <!-- <div class="col-xs-12 addBtn">
            <a href="/BackNewsManage/NewsManageAdd?pageNo=<%= pageNo %>" title="新增">
              <input type="button" class="btn btn-success" value="新增">
            </a>
          </div> -->

        <div class="clearfix"></div>
        <!-- 查詢結果 -->
        <div class="col-xs-12">
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr class="serchlist">
                  <th width="10%">編號</th>
                  <th width="10%">會員名稱</th>
                  <th width="10%">註冊日期</th>
                  <th width="10%">修改日期</th>
                  <th width="10%">狀態</th>
                  <th width="10%">管理</th>
                </tr>
              </thead>
              <tbody>
                <%var sn=1; //宣告sn=編號 %>
                  <% for(var i=0; i<data.length; i++) { %>
                    <tr>
                      <!-- 編號 -->
                      <td scope="row">
                        <%=sn %>
                      </td>
                      <!-- 會員名稱 -->
                      <td>
                        <%= data[i].MemberName %>
                      </td>
                      <!-- 註冊日期 -->
                      <td>
                        <%= (data[i].RegistrationDate).toLocaleDateString() %>
                      </td>
                      <!-- 修改日期 -->
                      <td>
                        <%= (data[i].ModifiedDate).toLocaleDateString() %>
                      </td>
                      <!-- 狀態 -->
                      <td>
                        <% var statusStr='' ; %>
                          <% var status=data[i].memberState; //宣告status=1或0 %>
                            <% (status==1) ? statusStr='使用中' : statusStr='停權中' ; //判斷status=1，則statusStr為顯示，反之為隱藏 ; %>
                              <%= statusStr %>
                      </td>
                      <!-- 功能 -->
                      <td>
                        <a href="/BackUserManage/UserManageEdit?id=<%= data[i].MemberID %>&pageNo=<%= pageNo %>">
                          <input type="button" class="btn btn-primary" value="編輯">
                        </a>
                      </td>
                    </tr>

                    <% sn++; %>
                      <% } %>
              </tbody>
            </table>
          </div>

          <!-- 頁碼 -->
          <nav aria-label="Page navigation" class="text-right">
            <ul class="pagination">

              <!-- 上一頁 -->
              <li class="">
                <% if(pageNo > 1) { %>
                <a class="" href="/BackUserManage/UserManageList?pageNo=<%= (pageNo-1) %>" title="上一頁"" aria-label=" Previous">
                  <span aria-hidden="true">&laquo;</span>
                </a>
                <% } %>
              </li>

              <!-- 頁碼 -->
              <% for(var i=1; i <=totalPage; i++) { %>
                <li class="page-item"><a class="page-link" href="/BackUserManage/UserManageList?pageNo=<%= i%>">
                    <%= i%>
                  </a>
                </li>
                <% } %>

                  <!-- 下一頁 -->
                  <li class="">
                    <% if(pageNo < totalPage) { %>
                    <a class="" href="/BackUserManage/UserManageList?pageNo=<%= (pageNo+1) %>" title="下一頁" aria-label="Next">
                      <span aria-hidden="true">&raquo;</span>
                    </a>
                    <% } %>
                  </li>
            </ul>
          </nav>



        </div>

      </div>
    </section>
  </div>
  </div>



  <%- include("./Back/Foot.txt") %>