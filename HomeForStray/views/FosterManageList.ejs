                            </tbody>

                        </table>
                    </div>

                    <!-- 頁碼 -->
                    <nav aria-label="Page navigation" class="text-right">
                        <ul class="pagination">

                            <!-- 上一頁 -->
                            <li class="">
                                <a class=""
                                    href="/FosterManageList?PetName=<%=req.query.PetName%>&FosterDateStart=<%=req.query.FosterDateStart%>&FosterDateEnd=<%=req.query.FosterDateEnd%>&AdoptState=<%=req.query.AdoptState%>&PageNum=<%=(PageNum-1) %>"
