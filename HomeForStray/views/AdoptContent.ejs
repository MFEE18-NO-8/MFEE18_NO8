</head>

<body>
    <!--navbar-->
    <div class="container-fluid header">
        <a href="#" class="logoImg navbar-brand">
          <img src="../img/Logo/改I2 2.png" alt="" class="logo">
          <img src="../img/Logo/字.png" alt="" class="logo-text">
        </a>
        <div class="nav">
        <!-- 漢堡選單 -->
        <ul class="menu burgar-menu">
          <li><a href="/">首頁</a></li>
          <li><a href="/AdoptList">毛孩領養</a></li>
          <li><a href="/Foster">刊登送養</a></li>
          <li><a href="/KnowList">毛孩知識</a></li>
        </ul>
        <a href="#" class="hamBar burgar-menu">
          <i>
            <img src="../img/icon/square.png" class="ham hamBar-icon"></img>
          </i>
        </a> 
      <!-- navbar-user -->
      <div class="btn-group">
        <button class="btn  btn-sm" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
          aria-expanded="false">
          <img src="../img/icon/user.png" alt="" class="user-icon">
        </button>
        <div class="dropdown-menu  user-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
          <ul>
            <li><a href="/UserEdit">會員資料</a></li>
            <li><a href="/UserFoster">我的送養文</a></li>
            <li><a href="/UserFollow">追蹤的毛孩</a></li>
            <li><a href="/UserMsg">通知</a></li>
            <li><a href="/member/logout">登出</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
    <!-- 毛孩資訊 -->
    <div class="container AdoptContent-block">
        <div class="row">
            <div class="col">
                <h3 class="AdoptContent-title">毛孩資訊</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 AdoptContent-left">
                <!-- carousel圖面輪撥 -->
                <div class="AdoptContent-pic">
                    <div class="container-fluid p-0">
                        <div id = carouselExampleIndicators class="carousel slide carousel-fade"data-ride="carousel"data-interval="3000">
                        <!-- 圖片 -->
                        <div class="carousel-inner">
                            <div class="carousel-item AdoptContent-carousel-item active" data-bs-interval="10000">
                                <img src="<%=data[0].PetImgURL%>" class="d-block w-100 AdoptContent-img" alt="...">
                            </div>
                            <% for(var i=0; i<data.length; i++) { %>
                                <div class="carousel-item AdoptContent-carousel-item">
                                    <img src="<%=data[i].PetImgURL%>" class="d-block w-100 AdoptContent-img" alt="...">
                                </div>
                            <%}%>
                        </div>
                        <!-- 上一頁 下一頁 -->
                        <a  class="carousel-control-prev"href="#carouselExampleIndicators"role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon"aria-hidden="true"></span>
                            <span class="sr-only">Previous</span></a>
                        <a  class="carousel-control-next"href="#carouselExampleIndicators"role="button"data-slide="next">
                            <span class="carousel-control-next-icon"aria-hidden="true"></span>
                            <span class="sr-only">Next</span></a>
                        </div> 
                    </div>  
                </div>
                <div class="row share justify-content-center">
                    <div class="share-item">
                        <div class="share-left">
                            <a href="#"><img src="../img/icon/heart.png" alt="" class="share-img"></a>
                            <h4>追蹤</h4>
                        </div>
                        <div class="share-right">
                            <a href="#"><img src="../img/icon/facebook.png" alt="" class="share-img"></a>
                            <a href="#"><img src="../img/icon/line.png" alt="" class="share-img"></a>
                            <h4>分享</h4>
                        </div>
                    </div>
                    <div class="row AdoptContent-connection justify-content-left">
                        <ul>
                            <li>聯絡人：<%= data[0].ContactPerson %></li>
                            <li>聯絡電話：<%= data[0].ContactPhone %></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 AdoptContent-right">
                <div class="row AdoptContent-text">
                        <h2 class="AdoptName"><%= data[0].PetName %></h2>
                        <ul>
                            <li>品種：<%= data[0].PetBreed %></li>
                            <li>種類：<%= data[0].PetSpecies %></li>
                            <li>性別：<%= data[0].PetGender %></li>
                            <li>毛色：<%= data[0].PetFur %></li>
                            <li>年紀：<%= data[0].PetAge %></li>
                            <%if(data[0].Neuter==0){%>
                                <li>結紮：未結紮</li>                        
                            <%}else{%>
                                <li>結紮：已結紮</li>                        
                            <%}%>
                            <li>地區：<%= data[0].CityName %></li>
                        </ul>
                    <span>
                        <h5>寵物介紹：</h5>
                        <p><%= data[0].PetDes%></p>
                    </span>
                </div>
            </div>
        </div>
    </div>


  <!-- footer -->
  <footer class="container-fluid p-0">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <img src="../img/Logo/字.png" alt="" class="footer-logo">
        </div>
        <div class="col-md-6 footer-link">
          <ul>
            <li><a href="/AdoptList">毛孩領養</a></li>
            <li><a href="/KnowList">毛孩知識</a></li>
          </ul>
          <ul>
            <li><a href="/Foster">刊登送養</a></li>
            <li><a href="/UserEdit">會員專區</a></li>
          </ul>
          <ul>
            <li><a href="/NewsList">最新消息</a></li>
            <li><a href="/">關於我們</a></li>
          </ul>
        </div>
      </div>
