<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>浪浪有窩後臺管理系統</title>
  <!-- 頁籤icon -->
  <link href="#" rel="icon" />
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

  <!-- Bootstrap 3.3.6 -->
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
  <script src="https://kit.fontawesome.com/461a428763.js" crossorigin="anonymous"></script>

  <!-- Ionicons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="/dist/css/AdminLTE.min.css">

  <!--JQ-->
  <link rel="stylesheet" href="/dist/css/jquery-ui.css">
  <link rel="stylesheet" href="/dist/css/skins/skin-blue.css">
  <link rel="stylesheet" href="/dist/css/gl-style.css">
  <!-- CSS -->
  <link rel="stylesheet" href="/dist/css/vnstyle.css">

</head>

<body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">
    <!-- 左上角Logo -->
    <header class="main-header">
      <a href="#" class="logo">
        <span class="logo-mini"><b>E</b>VE</span>
        <span class="logo-lg">
          <img style="height: 30px; width: 80px;" src="/img/Logo/字.png" alt="">
        </span>
      </a>

      <!-- 上方標題 -->
      <nav class="navbar navbar-static-top align-items-center" role="navigation" style="line-height: 50px;">
        <!-- <a href="#" class="sidebar-toggle  visible-xs" data-toggle="offcanvas" role="button">
          <span class="sr-only">Toggle navigation</span>
        </a> -->
        <!-- <h3 style=" text-align: left">後臺管理系統</h3> -->
        <div class="text-right align-items-center" ">
          <button type=" button" class="btn btn-info">登出</button>
        </div>
      </nav>


    </header>

    <!-- 左側選單 -->
    <aside class="main-sidebar">
      <section class="sidebar">
        <ul class="sidebar-menu">
          <li class="treeview"><a href="/BackUserManage/UserManageList"><i
                class="fa fas fa-user"></i><span>會員資料管理</span></a></li>
          <li class="treeview"><a href="/FosterManageList"><i class="fa fas fa-paw"></i> <span>刊登送養審核</span></a></li>
          <li class="treeview"><a href="/NewsManageList"><i class="fa fas fa-clipboard"></i><span>最新消息管理</span></a></li>
          <li class="treeview"><a href="/BackKnowManage/NewsManageList"><i class="fa fas fa-book"></i>
              <span>毛孩知識文章管理</span></a></li>
        </ul>
      </section>
    </aside>

    <div class="content-wrapper">
      <section class="content">
        <h3 class="title">毛孩知識管理</h3>

        <!-- 查詢條件 -->
        <div class="row">
          <div class="col-xs-12">
            <div class="search">
              <!-- 標題 -->
              <div class="col-xs-12 col-sm-6 col-md-3">
                <div class="form-group">
                  <label>標題：</label>
                  <input type="text" name="NewsTitle" class="form-control" id="">

                </div>
              </div>

              <!-- 換行 -->
              <div class="clearfix"></div>

              <!-- 發佈日期 -->
              <div class="col-xs-12 col-sm-6 col-md-3">
                <label>發佈日期：</label>
              </div>
              <div class="clearfix"></div>
              <!-- 發佈日期 -->
              <div class="col-xs-12 col-sm-6 col-md-3">
                <div class="form-group">
                  <input name="ShowStartDate" type="date" class="form-control inputNotOutline" name="ShowEndDate">
                </div>
              </div>

              <!-- 換行 -->
              <div class="clearfix"></div>

              <!-- 查詢/清除 -->
              <div class="col-xs-12 text-right">
                <button type="button" class="btn btn-primary">查詢</button>
                <button type="button" class="btn btn-primary">清除</button>
              </div>
              <div class="clearfix"></div>

            </div>
          </div>

          <div class="col-xs-12">
            <!-- 新增 -->
            <a href="/BackKnowManage/KnowManageAdd?pageNo=<%= pageNo %>" title="新增">
              <input type="button" class="btn btn-success" value="新增">
              </a>
              <br>
              <br>
              <!-- 查詢結果 -->
              <div class="table-responsive">
                <table class="table table-striped">

                  <thead>
                    <tr class="" style="background-color: #3c8dbc; color: white">
                      <th scope="col-2">編號</th>
                      <th scope="col-6">標題</th>
                      <th scope="col-2">發佈日期</th>
                      <th scope="col-2">管理</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(var i=0; i<data.length; i++) { %>
                      <tr>
                        <td scope="row">
                          <%= i+1 %>
                        </td>
                        <td>
                          <%= data[i].ArticleTitle %>
                        </td>
                        <td>
                          <%= (data[i].ArticleDate).toLocaleDateString() %>
                        </td>
                        <td>
                          <a href="/BackKnowManage/KnowManageEdit?id=<%= data[i].ArticleId %>&pageNo=<%= pageNo %>">
                            <input type="button" class="btn btn-primary" value="編輯">
                          </a>
                          <a href="/BackKnowManage/KnowManageDel?id=<%= data[i].ArticleId %>&pageNo=<%= pageNo %>"
                            title="刪除">
                            <a href="/BackKnowManage/KnowManageDel?id=<%= data[i].ArticleId %>&pageNo=<%= pageNo %>"
                              title="刪除">
                              <input type="button" class="btn btn-danger" value="刪除">
                            </a>
                      </tr>
                      <% } %>
                  </tbody>
                </table>
              </div>

              <!-- 頁碼 -->
              <nav aria-label="Page navigation" class="text-right">
                <ul class="pagination">

                  <!-- 上一頁 -->
                  <li class="">
                      <a class="" href="/BackKnowManage/KnowManageList?pageNo=<%= (pageNo-1) %>"
                        title="上一頁"" aria-label=" Previous">
                        <span aria-hidden="true">&laquo;</span>
                      </a>
                  </li>

                  <!-- 頁碼 -->
                  <% for(var i=1; i <=totalPage; i++) { %>
                    <li class="page-item"><a class="page-link" href="/BackKnowManage/KnowManageList?pageNo=<%= i%>">
                        <%= i%>
                      </a>
                    </li>
                    <% } %>

                      <!-- 下一頁 -->
                      <li class="">
                          <a class="" href="/BackKnowManage/KnowManageList?pageNo=<%= (pageNo+1) %>" title="下一頁"
                            aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                          </a>
                      </li>
                </ul>
              </nav>
          </div>
        </div>
      </section>
    </div>
  </div>





  <!-- JS SCRIPTS -->

  <!-- jQuery 2.2.3 -->
  <script src="/plugins/jQuery/jquery.js"></script>
  <script src="/plugins/jQuery/jquery-ui.js"></script>
  <!-- Bootstrap 3.3.6 -->
  <script src="/bootstrap/js/bootstrap.min.js"></script>
  <!-- AdminLTE App -->
  <script src="/dist/js/app.min.js"></script>
  <script src="/dist/js/jquery.tablesorter.min.js"></script>
  <script src="/dist/js/jquery.tablesorter.widgets.min.js"></script>

  <script>
    function Clone1() {
      var CloneModel = $("#cloneModel1").clone().html();
      $("#cloneModel1").parent().append(CloneModel);
    }

    $(function () {
      $("#datepicker").datepicker();
    });
    $(function () {
      $("#datepicker02").datepicker();
    });
    $(function () {
      $("#datepicker03").datepicker();
    });

  </script>

</body>

</html>