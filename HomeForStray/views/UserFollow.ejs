  <div class="container UserFollow-title">
    <h2>追蹤的毛孩</h2>
  </div>
  <div class="container">
    <table class="table table-hover">
      <thead class="UserFollow-thead">
        <tr>
          <th scope="col">編號</th>
          <th scope="col">寵物暱稱</th>
          <th scope="col">追蹤日期</th>
          <th scope="col">狀態</th>
          <th scope="col">功能</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i = 0 ; i < data.length; i++) { %>
          <tr>
            <th scope="row">
              <%= (data[i]) %>
            </th>
            <td>
              <%= (data[i].PetName) %>
            </td>
            <td>
              <%= (data[i].FollowDate.toLocaleDateString() %>
            </td>
            <td><button class="btnMd-back btn-green">查看</button></td>
            <td><button class="btnLg btn-lightRed">取消追蹤</button></td>
          </tr>
          <% } %>
      </tbody>
