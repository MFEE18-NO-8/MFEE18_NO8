<body>
	<!-- 引入header -->
	<%- include Header %>

		<div class="container UserFollow-title">
			<h2>追蹤的毛孩</h2>
		</div>
		<div class="container">
			<table class="table table-hover">
				<thead class="UserFollow-thead">
					<tr>
						<th scope="col">編號</th>
						<th scope="col">寵物暱稱</th>
						<th scope="col">追蹤日期</th>
						<th scope="col">狀態</th>
						<th scope="col">功能</th>
					</tr>
				</thead>
				<tbody>
					<%var sn=1; //宣告sn=編號 %>
						<% for(var i=0; i < FollowData.length; i++) { %>
							<tr>
								<!-- 這裡要放序號 -->

								<td>
									<%= sn %>
								</td>
								<td>
									<%= (FollowData[i].PetName) %>
								</td>
								<td>
									<%= (FollowData[i].FollowDate).toLocaleDateString() %>
								</td>
								<td>
									<!--查看-->
									<button class="btnMd-back btn-green">
										<a href="/AdoptContent?id=<%= FollowData[i].PetId%>">查看</a>
									</button>
								</td>
								<!-- 取消追蹤 -->
								<td>
									<!-- 方法一 -->
									<!-- <form action="" method="POST">
										<input class="btnLg btn-lightRed" name="變數(FollowData[i].PetID)變數  " type="submit" value="取消追蹤" required  />
									</form> -->
									<!-- 方法二 -->
									<!-- <button  class="btnLg btn-lightRed" name="變數(FollowData[i].PetID) 變數" type="button" id="unfollow" data-following="false" >取消追蹤</button> -->
									<!-- 方法三 -->
									<!-- <button class="btnLg btn-lightRed"  name="變數(FollowData[i].PetID) 變數" type="submit" formmethod="post" >取消追蹤</button> -->
									<!-- 方法四 -->
									<div class="btnLg btn-lightRed" id="XDDDD">取消追蹤</div>
								</td>
							</tr>
							<% sn++; %>
								<% } %>
				</tbody>
			</table>
		</div>

		<!-- 分頁 -->
		<nav aria-label="Page navigation example ">
			<ul class="pagination justify-content-center">
				<li class="page-item">
					<a class="page-link" href="/UserFollow?PageNo=<%= (PageNo-1) %>" title="上一頁" aria-label="Previous">
						<span aria-hidden="true">&laquo;</span>
					</a>
				</li>
				<% for(var i=1; i <=TotalPage; i++) { %>
					<li class="page-item">
						<a class="page-link" href="/UserFollow?PageNo=<%= i%>">
							<%= i%>
						</a>
					</li>
					<% } %>
						<li class="page-item">
							<a class="page-link" href="/UserFollow?PageNo=<%= (PageNo+1) %>" title="下一頁"
								aria-label="Next">
								<span aria-hidden="true">&raquo;</span>
							</a>
						</li>
			</ul>
		</nav>
		<!-- Footer -->
		<% include footer%>
			<script>
				// 漢堡選單
				$(document).ready(function () {
					$(".burgar-menu").on("click", function (e) {
						$("body").toggleClass("burgar-menu-show");
					});
				});
				//取消追蹤按鈕 一 
				// $("#unfollow").click(function(){
				// 	if($(this).attr('data-following') == 'false'){
				// 		$(this).attr('data-following','ture');
				// 		$(this).text('已取消追蹤');
				// 	}else if ($(this).attr('data-following')== 'true'){
				// 		$(this).attr('data-following','false');
				// 		$(this).text('Follow');
				// 	}
				// });
				//取消追蹤按鈕 二 替代方案
				window.onload = function (){
					var oSc = document.getElementById('XDDDD');
					var onOff = true;
					
					oSc.onclick = function (){
						if(onOff){
							oSc.innerHTML = '<i class=""></i>'+'已取消追蹤';
							onOff = false;    
						}else{
							oSc.innerHTML = '已重新追蹤';
							onOff = true;
						}
					};
				}
			</script>

		
</body>

</html>