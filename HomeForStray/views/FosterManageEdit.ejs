<%- include("./Back/Foster.txt") %>

    <!-- 內頁 -->
    <div class="content-wrapper">
        <section class="content">
            <h3 class="title">會員資料管理</h3>
            <form action="" id="News" name="News" method="POST" class="table-responsive">


                <!-- 不可編輯區 -->
                <table class=" table table-striped">
                    <!-- 刊登資訊 -->
                    <tr class="">
                        <th scope="col" style="vertical-align: middle;" colspan="4">
                            刊登資訊
                        </th>

                    </tr>
                    <!-- 會員刊登日期 -->
                    <tr class="">
                        <th scope="col" style="vertical-align: middle;">
                            刊登日期
                        </th>
                        <td colspan="3">
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <%= (data[0].AdoptDate).toLocaleDateString() %>
                            </div>
                        </td>
                    </tr>
                    <!-- 毛孩資訊 -->
                    <tr class="">
                        <th scope="col" style="vertical-align: middle;" colspan="4">
                            毛孩資訊
                        </th>

                    </tr>
                    <!-- 種類 -->
                    <tr class="">
                        <th scope="col" style="vertical-align: middle;">
                            種類 </th>
                        <td style="vertical-align: middle;">
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <div class="form-group">
                                    <%= data[0].PetSpecies %>
                                </div>
                            </div>
                        </td>
                        <!-- 品種 -->
                        <th scope="col" style="vertical-align: middle;">
                            品種 </th>
                        <td>
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <%= data[0].PetBreed %>
                            </div>
                        </td>

                    </tr>


                    <!-- 體型 -->
                    <tr class="">
                        <th scope="col" style="vertical-align: middle;">
                            體型
                        </th>
                        <td>
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <%= data[0].BodyType %>
                            </div>
                        </td>

                        <!-- 毛色 -->
                        <th scope="col" style="vertical-align: middle;">
                            毛色
                        </th>
                        <td>
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <%= data[0].PetFur %>
                            </div>
                        </td>
                    </tr>

                    <!-- 年紀 -->
                    <tr class="">
                        <th scope="col" style="vertical-align: middle;">
                            年紀
                        </th>
                        <td>
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <%= data[0].PetAge %>
                            </div>
                        </td>
                        <!-- 性別 -->
                        <th scope="col" style="vertical-align: middle;">
                            性別
                        </th>
                        <td>
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <%= data[0].PetGender %>
                            </div>

                        </td>
                    </tr>
                    <!-- 結紮狀況 -->
                    <tr class="">
                        <th scope="col" style="vertical-align: middle;">
                            結紮狀況
                        </th>
                        <td>
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <%= data[0].Neuter %>
                            </div>
                        </td>
                        <!-- 照片 -->
                        <th scope="col" style="vertical-align: middle;" rowspan="4">
                            照片 </th>
                        <td rowspan="4">
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <!-- 隱藏img -->
                                <img src="" alt="" id="outputImg" height="100" style="display:none">
                                <!-- 隱藏img end -->

                                <!-- <label for="uploadImg" class="TitleButton uploadImg">
                    <input type="file" style="display:none;" accept=".jpg, .jpeg, .png" id="uploadImg"
                        name="uploadImg" onchange="openFile(event)">上傳圖片
                </label>
                <input type="button" class="TitleButton" value="刪除圖片" id="deleteImg"> -->
                            </div>
                        </td>



                    </tr>

                    <!-- 是否有晶片 -->
                    <tr class="">
                        <th scope="col" style="vertical-align: middle;">
                            是否有晶片
                        </th>
                        <td>
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <%= data[0].Microchip %>
                            </div>
                        </td>
                    </tr>


                    <!-- 寵物描述 -->
                    <tr class="">
                        <th scope="col" style="vertical-align: middle;">
                            寵物描述
                        </th>
                        <td>
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <%= data[0].PetDes %>
                            </div>
                        </td>

                    </tr>


                    <!-- 縣市 -->
                    <tr class="">
                        <th scope="col" style="vertical-align: middle;">
                            縣市
                        </th>
                        <td>
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <%= data[0].CityId %>
                            </div>
                    </tr>
                    <!-- 刊登資訊 -->
                    <tr class="">
                        <th scope="col" style="vertical-align: middle;" colspan="4">
                            連落資訊
                        </th>

                    </tr>
                    <!-- 連絡人 -->
                    <tr class="">
                        <th scope="col" style="vertical-align: middle;">
                            連絡人
                        </th>
                        <td>
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <%= data[0].ContactPerson %> 3
                            </div>
                        </td>
                        <!-- 連絡電話 -->
                        <th scope="col" style="vertical-align: middle;">
                            連絡電話
                        </th>
                        <td>
                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <%= data[0].ContactPhone %>
                            </div>
                        </td>
                    </tr>





                </table>


                <div class="col-xs-12">
                    <div class="search">

                        <!-- 審核結果 -->
                        <div class=" col-xs-12 col-sm-6 col-md-3">
                            <div class="form-group">
                                <label>審核結果</label>
                                <div class="clearfix"></div>

                                <label for="memberState_1">
                                    <input type="radio" id="memberState_1" name="AdoptSatae" value="1" <%=(
                                        data[0].AdoptSatae==1 ) ? 'checked' :'' %> >
                                    已批准
                                </label>

                                <label for="memberState_0">
                                    <input type="radio" id="memberState_0" name="AdoptSatae" value="0" <%=(
                                        data[0].AdoptSatae==0 ) ? 'checked' :'' %> >

                                    未批准</label>
                                <div class="clearfix"></div>


                            </div>
                        </div>


                        <!-- 確認修改/返回 -->

                        <div class="col-xs-12 text-right">

                            <button type="submit" class="btn btn-primary">審核</button>
                            <a href="/FosterManageList">
                                <button type="button" class="btn btn-primary">返回</button>
                            </a>
                        </div>
                        <div class="clearfix"></div>


                    </div>
                </div>







            </form>
        </section>
    </div>
    </div>



    <%- include("./Back/Foot.txt") %>