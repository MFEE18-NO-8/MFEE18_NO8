    <div class="breadcrumb-block">
      <div class="container-fluid ">
        <ol class="breadcrumb pb-0 ">
          <li class="breadcrumb-item "><a href="#">首頁</a></li>
          <li class="breadcrumb-item active" aria-current="page">後臺管理</li>
          <li class="breadcrumb-item active" aria-current="page">最新消息管理</li>
          <li class="breadcrumb-item active" aria-current="page">新增</li>
        </ol>
      </div>
    </div>


    <div id="MyDivTitle" class="container">
      <h2 class="title-lg">最新消息管理</h2>
    </div>


    <div id="MyDiv" class="container">
      <form action="" id="News" name="News" method="POST">
        <table id="MyTable">
          <tr>
            <td class="Title">標題</td>
            <td colspan="5" class="Content">
              <input type="text" id="TitleText" class="inputNotOutline" value="<%= data[0].NewsTitle %>"
                name="NewsTitle" required>
            </td>
          </tr>

          <tr>
            <td class="Title">發佈日期</td>
            <td class="Content">
              <input type="date" class="inputNotOutline" name="ShowStartDate"
                value="<%= (data[0].ShowStartDate).toISOString().slice(0, 10) %>" required>

              <br>~

              <br>
              <input type="date" class="inputNotOutline" name="ShowEndDate"
                value="<%= (data[0].ShowEndDate).toISOString().slice(0, 10) %>" required>
            </td>

            <td class=" Title">狀態</td>
            <td class="Content">
              <label for="NewsState_1">
                <input type="radio" id="NewsState_1" name="NewsState" value="1" <%=( data[0].NewsState==1 ) ? 'checked'
                  :'' %> >
                顯示
              </label>
              <br>
              <label for="NewsState_0">
                <input type="radio" id="NewsState_0" name="NewsState" value="0" <%=( data[0].NewsState==0 ) ? 'checked'
                  :'' %> >

                隱藏</label>
            </td>
          </tr>

          <tr>
            <td class="Title">內容</td>
            <td colspan="5" class="Content">
              <textarea name="NewsContent" id="textArea" class="inputNotOutline" cols="40" rows="10" required>
                <%= data[0].NewsContent %>
              </textarea>

            </td>
          </tr>

          <tr>
            <td class="Title">照片</td>
            <td colspan="5" class="Content">
              <div id="TitleButtonDiv">
                <label for="uploadFile" class="TitleButton">
                  <input type="file" style="display:none;" id="uploadFile" name="">上傳檔案
                </label>
                <input type="button" class="TitleButton" value="刪除檔案">
              </div>
            </td>
          </tr>

          <tr>
            <td colspan="5" id="MySubmitId">
              <input type="submit" class="MySubmitSent" value="確認修改" style="width: 120px;">
              <a href="NewsManageList">
                <input type="submit" class="MySubmitCancel" value="返回">
              </a>
            </td>
          </tr>

        </table>
      </form>
    </div>

