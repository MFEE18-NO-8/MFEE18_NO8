      var CloneModel = $("#cloneModel1").clone().html();
      $("#cloneModel1").parent().append(CloneModel);
    }

    $(function () {
      $("#datepicker").datepicker();
    });
    $(function () {
      $("#datepicker02").datepicker();
    });
    $(function () {
      $("#datepicker03").datepicker();
    });

  </script>

</body>

</html>