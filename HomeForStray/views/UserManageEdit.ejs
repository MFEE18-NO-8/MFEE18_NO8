            <td class="ViewTitle">會員編號
            </td>
            <td class="ContentView"><label for="html" id="MyLabel">
                <%= (data[0].MemberID) %>
              </label>
            </td>
          </tr>
          <tr>
            <td class="ViewTitle">註冊日期
            </td>
            <td class="ContentView"><label for="html" id="MyLabel">
                <%= (data[0].RegistrationDate).toLocaleDateString() %>
              </label></td>
          </tr>
          <tr>
            <td class="ViewTitle">會員資料</td>
            <td class="ContentView">
              <table border="1">
                <tr>
                  <td class="ViewTitle" style="width: 250px;">帳號(信箱)</td>
                  <td style="width: 300px;">
                    <%= data[0].Email %>
                  </td>
                </tr>

                <tr>
                  <td class="ViewTitle">姓名</td>
                  <td>
                    <%= data[0].MemberName %>
                  </td>
                </tr>
                <tr>
                  <td class="ViewTitle">手機</td>
                  <td>
                    <%= data[0].CellPhone %>
                  </td>
                </tr>

            </td>
          </tr>
        </table>

        <!-- <tr>
